<% include ../partials/header %>


    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to BhoFood!</h1>
            <p> Small order or Big order we do it. Check our menu below :)</p>
            <p>
                <form action="/menu" method="GET" class="form-inline">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="Search a Dish">
                        <input class="btn btn-default" type="Submit" value="Search" class="">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:table; flex-wrap: wrap; clear: both;">
        <div class="col-md-12">
            <% if(noMatch !== null) {%>
            <h3 style="text-align: center;"><%= noMatch%></h3>
            <% } %>
        </div>
        <% menu.forEach(function(menu){ %>
            <div  class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img style="width: 100%; height: 270px;" src="<%= menu.image %>">
                    <div class="caption">
                        <h4><%= menu.name %></h4>
                    </div>
                    <p>
                        <a href="/menu/<%= menu._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

    <p>Don't see a dish that you would like to order? Submit one and we will get it! </p>
    <p><a class="btn btn-primary btn-large" href="/menu/new"> Add New Dish</a></p>
<% include ../partials/footer %>

